<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutonHuoltoSovellus.KeskikulutusPage"
             Title="Keskikulutus">
    <VerticalStackLayout Padding="20">
        <Label Text="Kuukausittainen keskikulutus (l/100km)" FontSize="20" HorizontalOptions="Center" />
        <CollectionView x:Name="ConsumptionList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Padding="10" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Month}" FontSize="18" />
                            <Label Text="{Binding Consumption}" FontSize="16" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>